<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:background="@drawable/rounded_selection_item"
    android:backgroundTint="@color/color_palette_4"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_selection"
        android:layout_width="80dp"
        android:layout_height="70dp"
        tools:srcCompat="@drawable/ic_selection" />

    <TextView
        android:id="@+id/tv_selection"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/selection_title"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />
</LinearLayout>