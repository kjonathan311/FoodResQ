<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_food_item"
    android:orientation="vertical"
    android:paddingBottom="10dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_food_item"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"

        app:shapeAppearanceOverlay="@style/rounded_corner_food_image_overlay"

        tools:srcCompat="@drawable/food_item_examp"></com.google.android.material.imageview.ShapeableImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/tv_food_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="2"
            android:maxLines="1"
            android:text="@string/food_Item_title"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_food_item_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#8BC34A"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/available"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_food_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:paddingLeft="10dp"
        android:text="Rp 25k"
        android:textColor="@color/color_palette_2"
        android:textSize="22dp" />

</LinearLayout>